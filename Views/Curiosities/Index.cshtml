@model IEnumerable<Mmt.Beheer.MVC.Models.Curiosity>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-info">Curiosity Index</h1>

<p class="float-right">
    <a asp-action="Create">Create New Curiosity</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.CuriosityLikeId)*@
                @Html.DisplayNameFor(model => model.CuriosityLike.Likes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coordinates)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Longitude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Latitude)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Period)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>*@
            <th>
                <label>Tours : </label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.CuriosityLikeId)*@
                    @Html.DisplayFor(modelItem => item.CuriosityLike.Likes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Image)*@
                    <img src="@item.Image" style="width:7rem" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coordinates)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Longitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Latitude)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Period)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Region)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Province)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>*@
                <td>
                    @{
                        var selectListItems = new SelectList(item.Tours.Select(t => t.Name));
                    }
                    <select asp-for="@item.Tours" asp-items="@selectListItems" disabled></select>
                </td>
                <td>
                    <a asp-controller="Curiosities" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary m-1" style="width:75px">Edit</a>
                    <form asp-action="Details" asp-route-id="@item.Id" class="m-1">
                        @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                        <button type="submit" class="btn btn-info" style="width:75px">Details</button>
                    </form>
                    <form asp-action="Delete" asp-route-id="@item.Id" class="m-1">
                        <button type="submit" class="btn btn-danger" style="width:75px">Delete</button>
                    </form>
                    @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                    @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                    @* @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>
        }
    </tbody>
</table>
